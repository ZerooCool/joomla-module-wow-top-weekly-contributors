<?xml version="1.0" encoding="utf-8"?>
<!-- @Version $Id$ -->
<extension type="module" version="2.5" client="site" method="upgrade">
    <name>WoW Top Weekly Contributors</name>
    <author>Branko Wilhelm</author>
    <creationDate>Apr 2013</creationDate>
    <copyright>(C) 2013 Branko Wilhelm</copyright>
    <license>GNU General Public License v3</license>
    <authorEmail>bw@z-index.net</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@SVN_REVISION@</version>
    <description>Display Top Weekly Contributors.</description>
    <files>
        <filename module="mod_wow_top_weekly_contributors">mod_wow_top_weekly_contributors.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <languages folder="lang">
        <language tag="en-GB">en-GB.mod_wow_top_weekly_contributors.ini</language>
        <language tag="de-DE">de-DE.mod_wow_top_weekly_contributors.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="guild" type="text" default="" size="30" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_GUILD_LABEL" />
                <field name="realm" type="text" default="" size="30" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_REALM_LABEL" />
                <field name="region" type="list" default="" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_REGION_LABEL">
                    <option value="">-- select --</option>
                    <option value="us">USA</option>
                    <option value="eu">Europe</option>
                    <option value="kr">Korea</option>
                    <option value="tw">Taiwan</option>
                    <option value="sea">Southeast Asia</option>
                </field>
                <field name="lang" type="list" default="" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_LANG_LABEL">
                    <option value="">-- select --</option>
                    <option value="en">English</option>
                    <option value="de">German</option>
                    <option value="fr">Français</option>
                    <option value="es">Español</option>
                    <option value="it">Italiano</option>
                    <option value="pt">Português</option>
                    <option value="ru">Русский</option>
                </field>
                <field name="link" type="list" default="battle.net" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_LINK_LABEL">
                    <option value="battle.net">battle.net</option>
                    <option value="wowhead.com">wowhead.com</option>
                </field>
            </fieldset>
            <fieldset name="DISPLAY">
                <field name="display_thead" type="radio" default="1" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_THEAD_LABEL" description="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_THEAD_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="display_place" type="radio" default="1" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_PLACE_LABEL" description="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_PLACE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
                <field name="display_level" type="radio" default="1" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_LEVEL_LABEL" description="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_LEVEL_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
                <field name="display_class" type="radio" default="1" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_CLASS_LABEL" description="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_DISPLAY_CLASS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field name="cache_time" type="text" filter="integer" default="60" size="5" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_CACHE_LABEL" description="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_CACHE_DESC" />
                <field name="timeout" type="text" filter="integer" default="10" size="5" required="true" label="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_TIMEOUT_LABEL" description="MOD_WOW_TOP_WEEKLY_CONTRIBUTORS_TIMEOUT_DESC" />
            </fieldset>
        </fields>
    </config>
	<updateservers>
		<server type="extension" priority="1" name="WoW Top Weekly Contributors">http://www.z-index.net/en/joomla/wow-top-weekly-contributors/updatestream.xml</server>
	</updateservers>
</extension>